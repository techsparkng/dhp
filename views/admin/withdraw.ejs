<% include ../partials/header %>
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="caed-title">Pending Withdrawals</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Package</th>
                                        <th>Payee Name</th>
                                        <th>Amount Withdrawn (₦)</th>
                                        <th>Investors Bank</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                <thead>

                                <tbody>
                                    <% var counter = 1; %>
                                    <% pendingWithdrawals.forEach(function(withdrawal){ %>
                                    <tr>
                                        <td><%= counter %></td>
                                        <td><%= withdrawal.package.investtype %></td>
                                        <td><%= withdrawal.withdrawer.firstname %> <%= withdrawal.withdrawer.lastname %></td>
                                        <td><%= withdrawal.amount %></td>
                                        <td>
                                           <%= withdrawal.withdrawer.bank.bankname %>
                                        </td>
                                        <td class="text-info"><%= withdrawal.created.toDateString() %></td>
                                        <td><form class="form-inline d-flex mr-4" action="withdraw/<%= withdrawal._id %>?_method=PUT" method="POST"><button type="submit" class="btn"><i class=" fa fa-check text-success"></i></button></form> <form class="form-inline d-flex" action="withdraw/<%= withdrawal._id %>?_method=DELETE" method="POST"><button type="submit" class="btn"><i class="fa fa-times text-danger"></i></button></form></td>
                                        <% counter++ %>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="caed-title">Approved Withdrawals</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Package</th>
                                        <th>Payee Name</th>
                                        <th>Amount Withdrawn (₦)</th>
                                        <th>Investors Bank</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                <thead>

                                <tbody>
                                    <% var counter = 1; %>
                                    <% approvedWithdrawals.forEach(function(withdrawal){ %>
                                    <tr>
                                        <td><%= counter %></td>
                                        <td><%= withdrawal.package.investtype %></td>
                                        <td><%= withdrawal.withdrawer.firstname %> <%= withdrawal.withdrawer.lastname %></td>
                                        <td><%= withdrawal.amount %></td>
                                        <td>
                                           <%= withdrawal.withdrawer.bank.bankname %>
                                        </td>
                                        <td class="text-info"><%= withdrawal.created.toDateString() %></td>
                                        <td><form class="form-inline d-flex mr-4" action="undowithdraw/<%= withdrawal._id %>?_method=PUT" method="POST"><button type="submit" class="btn"><i class="fa fa-mail-reply text-danger"></i></button></form></td>
                                        <% counter++ %>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="caed-title">Decline Withdrawals</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Package</th>
                                        <th>Payee Name</th>
                                        <th>Amount Withdrawn (₦)</th>
                                        <th>Investors Bank</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                <thead>

                                <tbody>
                                    <% var counter = 1; %>
                                    <% declinedWithdrawals.forEach(function(withdrawal){ %>
                                    <tr>
                                        <td><%= counter %></td>
                                        <td><%= withdrawal.package.investtype %></td>
                                        <td><%= withdrawal.withdrawer.firstname %> <%= withdrawal.withdrawer.lastname %></td>
                                        <td><%= withdrawal.amount %></td>
                                        <td>
                                           <%= withdrawal.withdrawer.bank.bankname %>
                                        </td>
                                        <td class="text-info"><%= withdrawal.created.toDateString() %></td>
                                        <td><form class="form-inline d-flex mr-4" action="undowithdraw/<%= withdrawal._id %>?_method=DELETE" method="POST"><button type="submit" class="btn"><i class="fa fa-mail-reply text-danger"></i></button></form></td>
                                        <% counter++ %>
                                    </tr>
                                    <% }) %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <% include ../partials/footer %>